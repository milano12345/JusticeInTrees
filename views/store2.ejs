<!DOCTYPE html>
<html>
  <head>
    <title>Justice in Trees Materials</title>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <link rel="stylesheet" href="assets/css/main.css" />
    <script src="https://checkout.stripe.com/checkout.js" defer></script>
    <!--add stripe public key here  -->
    <script src="../assets/css/store.js" defer></script>
    <noscript><link rel="stylesheet" href="assets/css/noscript.css"/></noscript>
  </head>

  <body class="is-preload">
    <!-- Page Wrapper -->
    <div id="page-wrapper">
      <!-- Header -->
      <header id="header">
        <h1><a href="index.html">Justice in Trees</a></h1>
        <nav id="nav">
          <ul>
            <li class="special">
              <a href="#menu" class="menuToggle"><span>Menu</span></a>
              <div id="menu">
                <ul>
                  <li><a href="index.html">Home</a></li>
                  <li><a href="#">Portfolio</a></li>
                  <li><a href="#">Order Materials/a></li>
                </ul>
              </div>
            </li>
          </ul>
        </nav>
      </header>

      <!-- Main -->
      <article id="main">
        <header>
          <h2>Justice in Trees</h2>
          <p>Order your supplies here</p>
        </header>
        <section class="wrapper style5">
          <div class="inner">
            <section>
              <h4>Materials</h4>
              <hr />

              <!-- Table 1 -->
              <h5>Decorative Rock</h5>
              <div class="table-wrapper">
                <table class="alt" >
                    <thead>
                        <tr>
                          <th>Item</th>
                          <th>Unit</th>
                          <th>Price</th>
                        </tr>
                      </thead>
                  <tbody>
                    <% items.music.forEach(function(item){ %>
                    <tr data-item-id="<%= item.id %>">
                      <td class="shop-item-title"><%= item.item%></td>
                      <td class="shop-item-unit"><%= item.unit%></td>
                      <td class="shop-item-price"><%= item.price / 100 %></td>
                      <td><button class="btn btn-primary shop-item-button" type="button" onClick="return false">ADD TO CART</button></td>
                    </tr>
                    <%}) %>
                  </tbody>
                </table>
              </div>
              <!-- table 2 -->
              <!-- <button class="button primary"><a href="">Jump to Checkout</a></button> -->
              <input type="button"  value="Go to Cart" onClick="document.getElementById('cart1').scrollIntoView();" />

              <h5>River Rock</h5>
              
              <div class="table-wrapper">
                <table class="alt" >
                    <thead>
                        <tr>
                          <th>Item</th>
                          <th>Unit</th>
                          <th>Price</th>
                        </tr>
                      </thead>
                  <tbody>
                    <% items.riverrock.forEach(function(item){ %>
                    <tr data-item-id="<%= item.id %>">
                      <td class="shop-item-title"><%= item.name%></td>
                      <td><%= item.unit%></td>
                      <td class="shop-item-price"><%= item.price / 100 %></td>
                      <td><button class="btn btn-primary shop-item-button" type="button" onClick="return false">ADD TO CART</button></td>
                    </tr>
                    <%}) %>
                  </tbody>
                </table>
              </div>
              <!-- Table 3 -->
              <h5>Cement Mixes + Sand</h5>
              <div class="table-wrapper">
                <table class="alt" >
                    <thead>
                        <tr>
                          <th>Item</th>
                          <th>Unit</th>
                          <th>Price</th>
                        </tr>
                      </thead>
                  <tbody>
                    <% items.music.forEach(function(item){ %>
                    <tr data-item-id="<%= item.id %>">
                      <td class="shop-item-title"><%= item.item%></td>
                      <td><%= item.unit%></td>
                      <td class="shop-item-price"><%= item.price / 100 %></td>
                      <td><button class="btn btn-primary shop-item-button" type="button" onClick="return false">ADD TO CART</button></td>
                    </tr>
                    <%}) %>
                  </tbody>
                </table>
              </div>
          </div>
        </section>
      </article>

      <!-- Shopping Cart -->
      <section class="container content-section">
        <h2 id="cart1" class="section-header">CART</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            <span class="cart-price cart-header cart-column">PRICE</span>
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>
        <div class="cart-items">
        </div>
        <div class="cart-total">
            <strong class="cart-total-title">Total</strong>
            <span class="cart-total-price">$0</span>
        </div>
        <button class="btn btn-primary btn-purchase" type="button">PURCHASE NOW</button>
    </section>

      <!-- Footer -->
      <section id="footer">
        <div class="inner">
          <h2 id="major" class="major">Get in touch</h2>
          <p>
            Interested in a quote or have questions? Contact me below.
          </p>
          <form method="POST" action="https://formspree.io/xnqbdpyd">
            <div class="fields">
              <div class="field">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" />
              </div>
              <div class="field">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" name="phoneNumber" id="phoneNumber" />
              </div>
              <div class="field">
                <label for="email">Email</label>
                <input type="email" name="replyTo" id="email" />
              </div>
              <div class="field">
                <label for="message">Message</label>
                <textarea name="message" id="message" rows="4"></textarea>
              </div>
            </div>
            <ul class="actions">
              <li>
                <input
                  id="send"
                  name="End of Message. Enjoy your day!"
                  type="submit"
                  value="Send Message"
                />
              </li>
            </ul>
          </form>
          <div class="icon solid fa-phone"><br />(720) 355-0661</div>
          <div class="icon solid fa-envelope">
            <br />
            <a href="mailto:justiceintrees2019@gmail.com"
              >justiceintrees2019@gmail.com</a
            >
          </div>
          <div class="icon brands fa-google">
            <br />
            <a href="#">google.com/justiceintrees</a>
          </div>
          <br />
          <div class="copyright">
            <p>&copy; Justice In Trees</p>
          </div>
          <div class="icon brands fa-linkedin">
            Design:
            <a href="http://linkedin.com/in/daniel-milano-90088b18a/"
              >Daniel Milano</a
            >
          </div>
        </div>
      </section>
    </div>
    <!-- Scripts -->
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/jquery.scrollex.min.js"></script>
    <script src="assets/js/jquery.scrolly.min.js"></script>
    <script src="assets/js/browser.min.js"></script>
    <script src="assets/js/breakpoints.min.js"></script>
    <script src="assets/js/util.js"></script>
    <script src="assets/js/main.js"></script>
  </body>
</html>
